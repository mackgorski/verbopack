{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "react",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@app/*": [
        "./*"
      ],
      "@packages/*": [
        "../../packages/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "next.config.js",
    "tailwind.config.js"
  ]
}